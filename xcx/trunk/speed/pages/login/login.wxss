.index_title_box {
  padding-top: 200rpx;
  text-align: center;
}
.index_title_box .index_title {
  height: 160rpx;
  line-height: 160rpx;
  font-weight: 700;
  font-size: 64rpx;
}
.index_title_box .index_subtitle {
  line-height: 80rpx;
  height: 80rpx;
  font-size: 36rpx;
}
.login_select_box {
  margin-top: 200rpx;
  text-align: center;
  font-size: 32rpx;
}
.login_select_box > view {
  margin: 0 auto;
  width: 470rpx;
  line-height: 80rpx;
  height: 80rpx;
}
.login_select_box .login_select_wx {
  cursor: pointer;
  border-radius: 10rpx;
  background-color: #169bd5;
  color: #fff;
}
.login_select_box .login_select_phone {
  cursor: pointer;
  margin-top: 40rpx;
  color: #169bd5;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  text-align: center;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size:28rpx;
}
.footer::after {
  content: '';
  position: absolute;
  top: 50%;
  left: -20rpx;
  width: 64rpx;
  height: 32rpx;
  background-size: 100% 100%;
  background-image: url('data:image/png;base64,');
  transform: translateY(-50%);
}
