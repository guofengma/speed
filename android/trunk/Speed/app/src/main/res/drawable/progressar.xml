    <!-- 这个是设置你进度的颜色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <!-- 这个也是设置时圆角还是直角，左边的 -->
                <corners android:radius="0dip" />
                <!-- 设置进度的颜色，将startColor、centerColor、endColor都设置成同一个颜色值 -->
                <gradient
                    android:angle="270"
                    android:centerColor="#DC143C"
                    android:centerY="0.75"
                    android:endColor="#DC143C"
                    android:startColor="#DC143C" />
            </shape>
        </clip>
    </item>

</layer-list>