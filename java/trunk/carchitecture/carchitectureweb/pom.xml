<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>carchitecture</artifactId>
    <groupId>com.speed</groupId>
    <version>1.0</version>
    <relativePath>..</relativePath>
  </parent>
  <artifactId>carchitectureweb</artifactId>
  <packaging>war</packaging>
  	<dependencies>
	
		<dependency>
			<groupId>com.speed</groupId>
			<artifactId>cimweb</artifactId>
			<version>1.0</version>
			<type>war</type>
			<scope>runtime</scope>  
		</dependency>
	
		 <dependency>
			<groupId>com.speed</groupId>
			<artifactId>frnotweb</artifactId>
			<version>1.0</version>
			<type>war</type>
			<scope>runtime</scope>  
		</dependency>
			<dependency>
			<groupId>com.speed</groupId>
			<artifactId>managerbackweb</artifactId>
			<version>1.0</version>
				<type>war</type>
			<scope>runtime</scope>  
		</dependency>
		
			<dependency>
			<groupId>com.speed</groupId>
			<artifactId>cinterfaceAPIweb</artifactId>
			<version>1.0</version>
				<type>war</type>
			<scope>runtime</scope>  
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.9</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

  <build>
   		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
				<overlays>
				
						<overlay>
							<groupId>com.speed</groupId>
							<artifactId>cimweb</artifactId>
						</overlay>
						<overlay>
							<groupId>com.speed</groupId>
							<artifactId>frnotweb</artifactId>
						</overlay>
						<overlay>
							<groupId>com.speed</groupId>
							<artifactId>managerbackweb</artifactId>
						</overlay>
							<overlay>
							<groupId>com.speed</groupId>
							<artifactId>cinterfaceAPIweb</artifactId>
						</overlay>
					</overlays> 
				
				</configuration>
			</plugin>
					<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>8.1.14.v20131031</version>
				<configuration>
					<scanIntervalSeconds>10</scanIntervalSeconds>
					<stopPort>9999</stopPort>
					<webAppConfig>
						<contextPath>/archweb</contextPath>
					</webAppConfig>
					<connectors>
						<connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
							<port>9080</port>
							<maxIdleTime>60000</maxIdleTime>
						</connector>
					</connectors>
				</configuration>
			</plugin>
			<plugin> 
				<groupId>org.apache.tomcat.maven</groupId> 
				<artifactId>tomcat7-maven-plugin</artifactId> 
				<version>2.2</version> 
				<configuration> 
				<port>8087</port>
					<path>/archweb</path> 
				<uriEncoding>UTF-8</uriEncoding>
				<server>tomcat7</server> 
				<finalName>archweb</finalName>
				</configuration> 
		    </plugin>
		</plugins>
  </build>
</project>